{
  "name": "my-fastify-starter",
  "version": "1.0.0",
  "private": true,
  "description": "my fastify starter",
  "main": "dist/index.js",
  "scripts": {
    "create:token": "node ./scripts/generate-token | pbcopy",
    "create:env": "node -r fs -e \"fs.copyFileSync('.env.sample', '.env', fs.constants.COPYFILE_EXCL)\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "npm run migrations:up && tsx watch ./src/index.ts | pino-pretty --colorize",
    "test": "DB_DISABLED=true jest --config .jest.json --coverage",
    "test:watch": "DB_DISABLED=true jest --config .jest.json --watch --verbose",
    "migrations:create": "migrate-mongo create",
    "migrations:up": "migrate-mongo up",
    "migrations:down": "migrate-mongo down",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@faker-js/faker": "8.4.1",
    "@fastify/autoload": "5.8.0",
    "@fastify/cors": "9.0.1",
    "@fastify/formbody": "7.4.0",
    "@fastify/jwt": "8.0.0",
    "@fastify/swagger": "8.14.0",
    "@fastify/type-provider-typebox": "4.0.0",
    "@sinclair/typebox": "0.32.14",
    "close-with-grace": "1.3.0",
    "dotenv": "16.4.5",
    "env-schema": "5.2.1",
    "eslint": "9.20.0",
    "fastify": "4.26.1",
    "fastify-plugin": "4.5.1",
    "http-errors": "2.0.0",
    "jsonwebtoken": "9.0.2",
    "migrate-mongo": "11.0.0",
    "mongoose": "8.2.0",
    "neostandard": "0.12.1"
  },
  "devDependencies": {
    "@tsconfig/node22": "22.0.0",
    "@types/http-errors": "2.0.4",
    "@types/jest": "29.5.12",
    "@types/jsonwebtoken": "9.0.5",
    "@types/node": "22.13.1",
    "jest": "29.7.0",
    "lefthook": "1.6.1",
    "lint-staged": "15.2.2",
    "pino-pretty": "10.3.1",
    "prettier": "3.2.5",
    "ts-jest": "29.1.2",
    "tsx": "4.7.1",
    "typescript": "5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint . --ext .ts --fix",
      "prettier --write"
    ],
    "*.js": [
      "prettier --write"
    ]
  }
}
