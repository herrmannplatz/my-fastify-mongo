{
  "name": "my-fastify-starter",
  "version": "1.0.0",
  "private": true,
  "description": "my fastify starter",
  "main": "dist/index.js",
  "scripts": {
    "create:env": "node -r fs -e \"fs.copyFileSync('.env.sample', '.env', fs.constants.COPYFILE_EXCL)\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "npm run migrations:up && tsx watch ./src/index.ts | pino-pretty --colorize",
    "test": "DB_DISABLED=true jest --config .jest.json --coverage",
    "test:watch": "DB_DISABLED=true jest --config .jest.json --watch --verbose",
    "migrations:create": "migrate-mongo create",
    "migrations:up": "migrate-mongo up",
    "migrations:down": "migrate-mongo down",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@faker-js/faker": "7.4.0",
    "@fastify/autoload": "5.2.0",
    "@fastify/cors": "8.1.0",
    "@fastify/formbody": "7.0.1",
    "@fastify/jwt": "6.3.2",
    "@fastify/mongodb": "^6.0.1",
    "@fastify/swagger": "7.4.1",
    "@fastify/type-provider-typebox": "2.3.0",
    "@sinclair/typebox": "0.24.28",
    "@types/node": "18.7.13",
    "dotenv": "16.0.1",
    "env-schema": "5.0.0",
    "fastify": "4.5.3",
    "fastify-plugin": "4.2.1",
    "http-errors": "2.0.0",
    "jsonwebtoken": "8.5.1"
  },
  "devDependencies": {
    "@types/http-errors": "1.8.2",
    "@types/jest": "28.1.8",
    "@types/jsonwebtoken": "8.5.9",
    "eslint": "8.22.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-prettier-standard": "4.0.1",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.8.7",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.1",
    "jest": "28.1.3",
    "lint-staged": "13.0.3",
    "migrate-mongo": "9.0.0",
    "pino-pretty": "9.1.0",
    "prettier": "2.7.1",
    "prettier-config-standard": "5.0.0",
    "ts-jest": "28.0.8",
    "tsx": "3.8.2",
    "typescript": "4.8.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": "prettier-config-standard"
}
